@model Bank.Application.Accounts.Commands.CreateAccountTransfer.CreateAccountTransferCommand

<div class="modal fade" id="transfer" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Transfer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Transfer" asp-controller="Account" method="post">
                    <div class="form-group">
                        <label asp-for="AccountIdFrom">From Account</label>
                        <input type="number" asp-for="AccountIdFrom" class="form-control" readonly="@true" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountIdTo">To Account</label>
                        <input type="number" asp-for="AccountIdTo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount">Amount</label>
                        <input asp-for="Amount" step="any" class="form-control num-input" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Transfer</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>