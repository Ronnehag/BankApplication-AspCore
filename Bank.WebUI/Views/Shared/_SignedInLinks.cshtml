@using Bank.Application.Enumerations

<ul class="navbar-nav mr-auto">
    @if (User.HasClaim(Claims.Cashier, "true"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Register"> Register Customer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">Search Customers</a>
        </li>
    }
    @if (User.HasClaim(Claims.Admin, "true"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Register"> Register User</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index"> Manage Users</a>
        </li>
    }
</ul>


<ul class="navbar-nav ml-auto">
    <li class="nav-item">
        <form asp-controller="User" asp-action="Logout" method="POST">
            <button class="nav-link"><i class="fas fa-sign-out-alt"></i> Sign out</button>
        </form>
    </li>
</ul>
