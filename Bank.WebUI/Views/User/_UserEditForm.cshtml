@model Bank.Application.Users.Commands.EditUser.EditUserCommand

<div class="modal fade" id="edit-@Model.UserId" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit user details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-center">You can change mail and/or password</p>
                <form asp-action="Update" asp-controller="User" method="post">
                    <input type="hidden" asp-for="UserId"/>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" readonly="@true"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewEmail">New Email</label>
                        <input asp-for="NewEmail" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">New Password</label>
                        <input asp-for="Password" class="form-control"/>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Update</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>